{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["@lib/*"],
      "@apps/*": ["apps/*"]
    },
    "jsx": "preserve",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true
  },
  "include": ["node_modules/wmr/types.d.ts", "./apps/**/*", "./@lib/**/*"],
  "exclude": ["node_modules/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
