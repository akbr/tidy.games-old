{
  "name": "tidy.games",
  "author": "Aaron Rieke",
  "version": "1.0.0",
  "engines": {
    "npm": "8.1.0",
    "node": "16.13.0"
  },
  "browserslist": "last 2 Chrome versions",
  "scripts": {
    "dev": "rm -r .parcel-cache/ || true && parcel ./apps/$npm_config_app_name/index.html",
    "build-client": "parcel build apps/$npm_config_app_name/index.html",
    "build-servers": "tsc --project tsconfig-server.json && tsc-alias -p tsconfig-server.json",
    "heroku-deploy": "git push https://git.heroku.com/$npm_config_app_name-tidy-games.git HEAD:master --force",
    "heroku-postbuild": "npm run build-client --app_name=$APP_NAME && npm run build-servers"
  },
  "workspaces": [
    "@lib/*"
  ],
  "dependencies": {
    "preact": "latest",
    "express": "^4.17.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ws": "^8.2.0",
    "parcel": "latest",
    "autoprefixer": "^10.4.0",
    "chai": "^4.3.4",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.3",
    "tailwindcss": "^2.2.19",
    "tsc-alias": "^1.4.1",
    "typescript": "4.6.0-dev.20220127"
  }
}
