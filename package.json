{
  "name": "tidy.games",
  "author": "Aaron Rieke",
  "version": "1.0.0",
  "engines": {
    "npm": "8.1.0",
    "node": "16.13.0"
  },
  "browserslist": "last 2 Chrome versions",
  "scripts": {
    "dev": "parcel ./apps/$npm_config_app_name/index.html",
    "build-client": "parcel build apps/$npm_config_app_name/index.html",
    "build-servers": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "heroku-deploy": "git push https://git.heroku.com/$npm_config_app_name-tidy-games.git HEAD:master",
    "heroku-postbuild": "npm run build-client --app_name=$APP_NAME && npm run build-servers"
  },
  "workspaces": [
    "@lib/*"
  ],
  "dependencies": {
    "express": "^4.17.1",
    "goober": "2.0.41",
    "preact": "10.5.14",
    "twemoji": "^13.1.0",
    "ws": "^8.2.3",
    "zustand": "3.5.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ws": "^8.2.0",
    "parcel": "^2.0.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.5.2"
  }
}
