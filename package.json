{
  "name": "tidy.games",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite apps/$npm_config_app_id",
    "build-app": "tsc -p ./apps/$npm_config_app_id && vite build apps/$npm_config_app_id && mv apps/$npm_config_app_id/dist ./dist/client",
    "build-node": "tsc --project apps/$npm_config_app_id/tsconfig-node.json && tsc-alias -p apps/$npm_config_app_id/tsconfig-node.json && mv apps/$npm_config_app_id/dist ./dist",
    "build-all": "rm -rf dist/ && npm run build-node --app-id=$npm_config_app_id && npm run build-app --app-id=$npm_config_app_id",
    "local-deploy": "npm run build-all --app-id=$npm_config_app_id && node ./dist/apps/$npm_config_app_id/index-express.js",
    "heroku-postbuild": "npm run build-all --app-id=$APP_NAME",
    "heroku-deploy": "git push https://git.heroku.com/$npm_config_app_id-tidy-games.git HEAD:master --force"
  },
  "dependencies": {
    "@twind/preact": "1.0.5",
    "express": "^4.17.3",
    "preact": "latest",
    "twind": "^0.16.16",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.1.5",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.18",
    "@types/ws": "^8.5.2",
    "tsc-alias": "^1.6.4",
    "typescript": "4.6.2",
    "vite": "^2.8.0"
  }
}
